<h2>Checkout</h2>
<div class="row">
  <div class="col-md-6">
    <h4>Billing Info</h4>
    <form>
      <h5>Personal</h5>
      <div class="form-group">
        <label for="inputFirstName">First Name</label>
        <input type="text" class="form-control" id="inputFirstName" placeholder="Your First Name">
      </div>
      <div class="form-group">
        <label for="inputLastName">Last Name</label>
        <input type="text" class="form-control" id="inputLastName" placeholder="Your Last Name">
      </div>
      <div class="form-group">
        <label for="inputEmail">Email address</label>
        <input type="email" class="form-control" id="inputEmail" placeholder="Your Email">
      </div>
      <h5>Address</h5>
      <div class="form-group">
        <label for="inputStreet">Street</label>
        <input type="text" class="form-control" id="inputStreet" placeholder="Your Street">
      </div>
      <div class="form-group">
        <label for="inputCity">City</label>
        <input type="text" class="form-control" id="inputCity" placeholder="Your City">
      </div>
      <div class="form-group">
        <label for="inputState">State</label>
        <input type="text" class="form-control" id="inputState" placeholder="Your State">
      </div>      
      
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
  <div class="col-md-6">
    <h4>Order Items</h4>
    <table class="table table-hover">
      <tbody>
        {{#each cart as |product|}}
          <tr>
            <td><img class="img-fluid img-thumbnail" src="{{product.imageUrl}}"></td>
            <td>{{product.name}}</td>
            <td>${{product.price}} x {{product.quantity}} = ${{itemTotal product.price product.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>      
    </table>
    <h4 class="text-right">Total: ${{cartTotal cart}}</h4>
  </div>
</div>